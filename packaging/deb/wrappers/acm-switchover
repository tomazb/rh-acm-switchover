#!/bin/sh
# ACM Switchover wrapper script (Debian/Ubuntu)
[ -r /etc/default/acm-switchover ] && . /etc/default/acm-switchover
: "${ACM_SWITCHOVER_STATE_DIR:=/var/lib/acm-switchover}"
export ACM_SWITCHOVER_STATE_DIR
export PYTHONPATH="/usr/share/acm-switchover:${PYTHONPATH}"
exec /usr/bin/python3 -c "from acm_switchover import main; main()" "$@"
